# Copy to `.env` for local development (never commit real secrets).

# App
ENV=local
CORS_ALLOW_ORIGINS=http://127.0.0.1:5500,http://localhost:5500

# Database
# - Local SQLite: sqlite:///./app.db
# - Postgres (Render/Fly): postgresql+psycopg://USER:PASSWORD@HOST:5432/DBNAME
DATABASE_URL=sqlite:///./app.db
DB_AUTO_CREATE=true

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Twilio (SMS/Voice webhooks)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_SMS_FROM=

# Google OAuth (Calendar)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=
GOOGLE_CALENDAR_ID=primary

# Optional: force mock LLM (no network)
MOCK_LLM=true

